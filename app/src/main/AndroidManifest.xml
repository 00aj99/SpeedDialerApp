<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.denmlaa.speeddialerapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activities.SplashWelcomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".util.widget.ContactWidgetProvider"
            android:icon="@drawable/ic_launcher_background"
            android:label="Speed Dialer">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/contact_widget_info" />
        </receiver>

        <service
            android:name=".util.widget.GridWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity android:name=".activities.ContactWidgetConfig">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".activities.ContactPickWidget"></activity>
    </application>

</manifest>